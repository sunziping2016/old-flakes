{
    "[cpp]": {
        "editor.defaultFormatter": "xaver.clang-format"
    },
    "[python]": {
        "editor.formatOnType": true
    },
    "cmake.configureOnOpen": true,
    "cmake.debugConfig": {
        "sourceFileMap": {
            "${workspaceRoot}": {
                "editorPath": "${workspaceRoot}",
                "useForBreakpoints": true
            }
        }
    },
    "doxdocgen.generic.authorEmail": "me@szp.io",
    "doxdocgen.generic.authorName": "Ziping Sun",
    "editor.fontFamily": "'JetBrainsMono Nerd Font Mono',Consolas, 'Courier New', monospace",
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.inlineSuggest.enabled": true,
    "editor.smoothScrolling": true,
    "editor.stickyScroll.enabled": true,
    "extensions.autoUpdate": false,
    "extensions.ignoreRecommendations": true,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "jupyter.askForKernelRestart": false,
    "notebook.lineNumbers": "on",
    "security.workspace.trust.banner": "never",
    "vim.autoSwitchInputMethod.defaultIM": "1",
    "vim.autoSwitchInputMethod.enable": true,
    "vim.autoSwitchInputMethod.obtainIMCmd": "/usr/bin/env fcitx5-remote",
    "vim.autoSwitchInputMethod.switchIMCmd": "/usr/bin/env fcitx5-remote -t {im}",
    "vim.camelCaseMotion.enable": true,
    "vim.easymotion": true,
    "vim.foldfix": true,
    "vim.gdefault": true,
    "vim.handleKeys": {
        "<C-h>": false
    },
    "vim.highlightedyank.enable": true,
    "vim.hlsearch": true,
    "vim.leader": " ",
    "vim.replaceWithRegister": true,
    "vim.smartRelativeLine": true,
    "vim.sneak": true,
    "vim.sneakReplacesF": true,
    "vim.targets.enable": true,
    "vim.useSystemClipboard": true
}
