{
    "workbench.colorTheme": "Default Dark+",
    "update.enableWindowsBackgroundUpdates": false,
    "editor.fontFamily": "'JetBrainsMono Nerd Font Mono',Consolas, 'Courier New', monospace",
    "editor.formatOnSave": true,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "cmake.configureOnOpen": true,
    "[cpp]": {
        "editor.defaultFormatter": "xaver.clang-format"
    },
    "vim.autoSwitchInputMethod.obtainIMCmd": "/usr/bin/env fcitx5-remote",
    "vim.autoSwitchInputMethod.switchIMCmd": "/usr/bin/env fcitx5-remote -t {im}",
    "vim.autoSwitchInputMethod.defaultIM": "1",
    "vim.autoSwitchInputMethod.enable": true,
    "vim.camelCaseMotion.enable": true,
    "vim.easymotion": true,
    "vim.foldfix": true,
    "vim.gdefault": true,
    "vim.highlightedyank.enable": true,
    "vim.hlsearch": true,
    "vim.replaceWithRegister": true,
    "vim.sneak": true,
    "vim.sneakReplacesF": true,
    "vim.targets.enable": true,
    "vim.useSystemClipboard": true,
    "vim.leader": " ",
    "vim.smartRelativeLine": true,
    "vim.handleKeys": {
        "<C-h>": false
    },
    "editor.smoothScrolling": true,
    "sops.beta": true,
    "clangd.detectExtensionConflicts": false
}
